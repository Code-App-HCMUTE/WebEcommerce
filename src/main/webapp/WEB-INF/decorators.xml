<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<excludes>
		<pattern>/api*</pattern>
<!--		<pattern>/auth*</pattern>-->
	</excludes>
	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="auth" page="auth.jsp">
		<pattern>/auth*</pattern>
	</decorator>
	<decorator name="vendor" page="vendor.jsp">
		<pattern>/vendor*</pattern>
	</decorator>
	<decorator name="seller" page="seller.jsp">
		<pattern>/seller*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>